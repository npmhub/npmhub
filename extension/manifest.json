{
  "name":"npmhub",
  "version": "0.0.0",
  "manifest_version":2,
  "description":"Explore npm dependencies on GitHub and GitLab repos",
  "author": "Zeke Sikelianos, Federico Brigante",
  "icons":{
    "16":"icons/icon16.png",
    "48":"icons/icon48.png",
    "128":"icons/icon128.png"
  },
  "applications": {
    "gecko": {
      "id": "npm-hub@sikelianos.com",
      "strict_min_version": "45.0"
    }
  },
  "background": {
    "scripts": [
        "background-fetch.js"
    ]
  },
  "permissions": [
    "https://registry.npmjs.org/"
  ],
  "content_scripts":[
    {
      "matches":[
        "https://github.com/*",
        "https://gitlab.com/*"
      ],
      "js":[
        "background-fetch.js",
        "jquery.js",
        "index.js"
      ],
      "css":[
        "index.css"
      ]
    }
  ]
}
