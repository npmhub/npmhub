{
  "private": true,
  "author": "zeke",
  "license": "MIT",
  "scripts": {
    "test": "xo && npm run build",
    "build": "webpack --mode=production",
    "watch": "webpack --mode=development --watch",
    "release-amo": "cd distribution && web-ext-submit",
    "release-cws": "cd distribution && webstore upload --auto-publish",
    "release": "npm run build && npm run update-version && npm run release-amo && npm run release-cws",
    "update-version": "VERSION=20$(utc-version); echo $VERSION; dot-json distribution/manifest.json version $VERSION"
  },
  "xo": {
    "space": true,
    "rules": {
      "import/no-unassigned-import": 0
    },
    "envs": [
      "browser",
      "webextensions"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    }
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "dot-json": "^1.2.0",
    "size-plugin": "^2.0.1",
    "terser-webpack-plugin": "^2.3.5",
    "utc-version": "^2.0.1",
    "web-ext-submit": "^4.1.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "xo": "^0.26.1"
  },
  "dependencies": {
    "doma": "^1.0.3",
    "escape-goat": "^3.0.0",
    "github-injection": "^1.0.1",
    "hosted-git-info": "^3.0.2",
    "select-dom": "^6.0.0",
    "webext-domain-permission-toggle": "^1.0.0",
    "webext-dynamic-content-scripts": "^6.0.3"
  }
}
